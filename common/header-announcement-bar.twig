{% if ab_settings.announcement_bar_display %}
	{% if (ab_settings.announcement_bar_page_display is empty)
        or (template == 'home' and ab_settings.announcement_bar_page_display == 'home')
        or ab_settings.announcement_bar_page_display == 'all'
    %}
		<section class="tp-bar {{ ab_settings.announcement_bar_stop_move ? 'stop-move' : '' }}" style="{% if ab_settings.announcement_bar_background_color %}background: {{ ab_settings.announcement_bar_background_color }} {% endif %}">
			<div class="tp-mask">
				<div class="tp-marquee">
					{% for ad in ab_settings.announcement_bar_advertisement_bar %}
						<a href="{{ ad.url is not empty ? ad.url : 'javascript:;' }}" style="{% if ad.text_color %}color: {{ ad.text_color }}{% endif %}">
							{% if ad.image %}
								<img loading="lazy" class="lazy-img" src="{{ imageUrl(ad.image) }}"  alt="image" width="26" height="26">
							{% endif %}
							{{ ad.text }}
						</a>
					{% endfor %}
				</div>
				<div class="tp-marquee">
					{% for ad in ab_settings.announcement_bar_advertisement_bar %}
						<a href="{{ ad.url is not empty ? ad.url : 'javascript:;' }}" style="{% if ad.text_color %}color: {{ ad.text_color }}{% endif %}">
							{% if ad.image %}
								<img loading="lazy" class="lazy-img" src="{{ imageUrl(ad.image) }}"  alt="image" width="26" height="26">
							{% endif %}
							{{ ad.text }}
						</a>
					{% endfor %}
				</div>
			</div>
		</section>
	{% endif %}
{% endif %}