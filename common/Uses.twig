
{% for meta in product.metafields %}
    {% if meta.slug == "BENEFITS-AND-USES" %}
        {% set UsesSlug = meta.slug %}
        {% set UsesName = meta.name %}
        {% set UsesVal = meta.value %}
        <div class="accordion-item">
            <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#{{UsesSlug}}" aria-expanded="false" aria-controls="{{UsesSlug}}">
                    
                    
                    <span>
                        {% if session.lang.code == 'ar' %}
                        {{meta.name.ar}}
                        {% endif %}
                        {% if session.lang.code == 'en' %}
                        {{meta.name.en}}
                        {% endif %}
                    </span>
                        
                   <div class="btns">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-lg plus" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2"/>
                        </svg>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-dash-lg minus" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M2 8a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11A.5.5 0 0 1 2 8"/>
                        </svg>
                   </div>
                
                </button>
            </h2>
            <div id="{{UsesSlug}}" class="accordion-collapse collapse ">
                <div class="accordion-body benefits-and-uses">
                    {% for item in meta.value.cells %}
                        <div class="benfit-item d-flex flex-column gap-3 align-items-center">
                       {% if item[0].value.medium or item[0].value.small or item[0].value.full_size %}
                            <div class="parent-img">
                                <img
                                src="{{ item[0].value.medium ?? item[0].value.small ?? item[0].value.full_size }}"
                                alt="benefit image"
                                class="img"
                                style="max-width: 100px;"
                                />
                            </div>
                        {% endif %}
                        
                        <div class="parent-text">
                            <p class="text">
                                {% if session.lang.code == 'ar' %}  
                                {{ item[1].value.ar }}
                            {% else %}
                                {{ item[1].value.en }}
                            {% endif %}

                            </p>
                            

                        </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endif %}
{% endfor %}


