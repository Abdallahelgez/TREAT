

<section class="serena-hero-section">
    <div class="content-wrapper">
        <h1 class="main-heading">
           {{settings.title}}
        </h1>
        <p class="subtext">
            {{settings.subTitle}}
        </p>
        <a href="{{settings.url}}" class="cta-button">
            {{settings.button_text}}
        </a>
    </div>
    <div class="image-container-div">
        <img src="{{settings.image}}" alt="">
    </div>
</section>

{% schema %}
{
  "name": {
    "ar": "سيكشن مميز",
    "en": "special section"
  },
  "icon": "fal fa-images",
  "display": true,
  "settings": {
        "image":  {
            "type": "image",
            "label": {
                    "ar": "الصورة",
                    "en": "Image"
            },
            "info": {
                    "ar": "ارفع صورة بحجم 1440 * 732 ",
                    "en": "Upload an image with a size of 1440 * 732"
            }
        },
        "url": {
            "type": "url",
            "label": {
                "ar": "رابط الزرار",
                "en": "Link button"
            }
        },
        "button_text": {
            "type": "text",
            "label": {
                "ar": "نص الزرار",
                "en": "text button"
            }
        },
        "title": {
            "type": "text",
            "label": {
                "ar": "النص الاساسي",
                "en": "main text"
            }
        },
        "subTitle": {
            "type": "text",
            "label": {
                "ar": "النص الفرعي ",
                "en": "sub text"
            }
        }

  }
}
{% endschema %}