<style>
    .hero-sec {
  position: relative;
  width: 100%;
  height: auto;
  overflow: hidden;
}
.rtl .swap{

}
.hero-img {
  width: 100%;
  height: auto;
  display: block;
}
    /*****************/
.hero-content {
    position: absolute;
    bottom: 120px;
    left: 100px;
    color: #000;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 20px;
    width: fit-content;
    align-self: stretch;
    max-width: 280px;
    width: max-content;

}   
.rtl .swap .hero-content{
    right: 100px;
}


@media (max-width: 1201px) {
    .hero-content{
        left: 80px;
        bottom: 100px;
        gap: 18px;
    }
    .rtl .swap .hero-content{
        right: 80px;
    }

}
@media (max-width: 993px) {
    .hero-content{
        left: 60px;
        bottom: 80px;
        gap: 16px;
    }
    .rtl .swap .hero-content{
        right: 60px;
    }  
}
@media (max-width: 769px) {
    .hero-content{
        left: 40px;
        bottom: 60px;
        gap: 13px;
    }
    .rtl .swap .hero-content{
        right: 40px;
    }  
}
@media (max-width: 577px) {
    .hero-content{
        left: 20px;
        bottom: 40px;
        gap: 10px;
    }
    .rtl .swap .hero-content{
        right: 20px;
    }     
}
@media (max-width: 450px) {
    .hero-content{
            left: 16px;
            bottom: 20px;
    }   
    .rtl .swap .hero-content{
        right: 16px;
    }  
}
    /*****************/
.hero-content h2 {
    margin: 0;
    font-size: 40px;
    font-style: normal;
    font-weight: 400;
    line-height: 100%;
    text-align: center;
    letter-spacing: 0.02em;

}
@media (max-width: 1201) {
    .hero-content h2 {
        font-size: 36px;
    } 
}
@media (max-width: 993px) {
    .hero-content h2 {
        font-size: 32px;
    } 
}
@media (max-width: 769px) {
    .hero-content h2 {
        font-size: 28px;
    } 
}
@media (max-width: 577px) {
    .hero-content h2 {
        font-size: 24px;
    } 
}  
@media (max-width: 450px) {
    .hero-content h2 {
        font-size: 18px;
    } 
}  

    /*****************/
.shop-button {
    display: flex;
    padding: 10px;
    justify-content: center;
    align-items: center;
    border: 1px solid var(--green-color);
    text-decoration: none;
    color: #090909;
    background: white;
    font-style: normal;
    font-weight: 400;
    line-height: 100%;
    text-align: center;
    font-size:20px;
    border-radius: 2px;
    width: 115px;
display: inline-flex;
cursor: pointer;
 align-items: center;
            justify-content: space-between;
            transition: width 0.4s ease, background-color 0.4s ease;
}
.button-text {
            white-space: nowrap;
        }
        .button-icon {
            opacity: 0; 
            margin-right: 0; 
         
            transition: opacity 0.4s ease, margin-right 0.4s ease;
        }
.shop-button:hover{
    width: 140px;
    background-color: var(--green-color);
}
.shop-button:hover .button-text{
    color: #ffffff;
}
.shop-button:hover  .button-icon {
            opacity: 1; 
            margin-right: 10px; 
        } 
@media (max-width: 993px) {
    .shop-button{ 
        font-size: 18px;
        padding: 8px;
    }   
} 
@media (max-width: 769px) {
    .shop-button{
        padding: 6px;
        font-size: 16px;
    }   
}
@media (max-width: 577px) {
    .shop-button{
        padding: 4px;
    }   
}
</style>

